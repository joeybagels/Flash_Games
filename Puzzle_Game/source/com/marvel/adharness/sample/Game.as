/* ©COPYRIGHT 2009 MARVEL ENTERTAINMENT	This code is a sample game with timer procedures to simulate a game	being played while the ads load. If you are looking to start from a clean	template for a new game, please use the GameTemplate.as file.	*/package com.marvel.adharness.sample {		import flash.display.MovieClip;	import flash.events.*;	import com.marvel.adharness.AdHarnessGameInterface;		//sample imports for demo	import flash.events.TimerEvent;     import flash.utils.Timer;		// implements the AdHarnessGameInteface to unify the callback structure	public class Game extends MovieClip implements AdHarnessGameInterface {				private var adHarness:MovieClip;		private var minuteTimer:Timer; // demo code		private var endGameFlag:Boolean = false;				public function Game():void		{			trace('game loaded'); // demo code		}				// called by the harness to get the game started		public function startGame():void		{			trace('game started');// demo code						bEndLevel.addEventListener(MouseEvent.MOUSE_UP,onEndLevelButton);			bEndGame.addEventListener(MouseEvent.MOUSE_UP,onEndGameButton);		}				public function cont():void		{			trace('game continued');// demo code						// demo code			// checking to see if the game is over, and stopping the ads			if(endGameFlag)				return;		}				// captures the AdHarness reference object		public function setAdHarnessRef(mc:MovieClip):void		{			adHarness = mc;		}				// handles the end level sequence		public function endLevel():void		{			adHarness.endLevel();		}				// handles the end of game sequence		public function endGame():void		{			adHarness.endGame();									endGameFlag = true;		}				// button listener		public function onEndLevelButton(e:Event):void		{			endLevel();		}				// button listener		public function onEndGameButton(e:Event):void		{			endGame();		}	}}