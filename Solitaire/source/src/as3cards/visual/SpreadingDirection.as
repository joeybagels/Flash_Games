package as3cards.visual
{
	
/**
 * Static constants to represent different values
 * of spreading directions.  Meant to be an enumerated 
 * type, but because AS3 lacks this functionality, 
 * static constants are used instead.
 */
public class SpreadingDirection
{

	public static const NONE:int = 0;
	public static const NORTH:int = 1;
	public static const SOUTH:int = 2;
	public static const EAST:int = 3;
	public static const WEST:int = 4;		

} // end class
} // end package